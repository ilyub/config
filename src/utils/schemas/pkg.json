{
  "properties": {
    "scripts": {
      "properties": {
        "add-tags": {
          "enum": [
            "php src/utils/add-tags.php",
            "php node_modules/@skylib/config/src/utils/add-tags.php"
          ]
        },
        "audit": {
          "const": "npm audit"
        },
        "browserslist": {
          "enum": [
            "browserslist",
            "echo Skip browserslist"
          ]
        },
        "build": {
          "enum": [
            "cf ./dist & tsc --project tsconfig-build.json",
            "echo Skip build"
          ]
        },
        "build-doc": {
          "enum": [
            "cf ./docs & typedoc src & cpy docs-static/* docs",
            "php chore/build-doc.php",
            "echo Skip build-doc"
          ]
        },
        "build-es": {
          "enum": [
            "cf ./es & tsc --project tsconfig-build-es.json",
            "echo Skip build-es"
          ]
        },
        "clean-install": {
          "const": "npm clean-install --no-audit --strict-peer-deps"
        },
        "clear-cache": {
          "const": "cf cache node_modules/.cache"
        },
        "commit-msg": {
          "const": "npm run commitlint"
        },
        "commitlint": {
          "const": "commitlint --edit"
        },
        "commitlint-all": {
          "const": "commitlint --config commitlint-all.config.js --from="
        },
        "compile": {
          "enum": [
            "quasar build",
            "vsce package",
            "echo Skip compile"
          ]
        },
        "config-lint": {
          "enum": [
            "node src/utils/config-lint.js",
            "node node_modules/@skylib/config/src/utils/config-lint.js"
          ]
        },
        "delete-tags": {
          "enum": [
            "php src/utils/delete-tags.php",
            "php node_modules/@skylib/config/src/utils/delete-tags.php"
          ]
        },
        "install-deps": {
          "const": "npm install --no-audit --strict-peer-deps"
        },
        "lint": {
          "enum": [
            "eslint --fix --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,configs,fixtures,src,tests}/**/*.{js,ts,vue}",
            "echo Skip lint"
          ]
        },
        "lint-fast": {
          "enum": [
            "npm run lint --config .eslintrc.fast.js",
            "echo Skip lint-fast"
          ]
        },
        "lint-no-fix": {
          "enum": [
            "set TIMING=1 & npm run lint --fix",
            "echo Skip lint-no-fix"
          ]
        },
        "package-json-lint": {
          "const": "npmPkgJsonLint ."
        },
        "php-cs-fixer": {
          "enum": [
            "php-cs-fixer fix --verbose",
            "echo Skip php-cs-fixer"
          ]
        },
        "post-commit": {
          "enum": [
            "php src/utils/post-commit.php",
            "php node_modules/@skylib/config/src/utils/post-commit.php"
          ]
        },
        "pre-commit": {
          "enum": [
            "php src/utils/pre-commit.php",
            "php node_modules/@skylib/config/src/utils/pre-commit.php"
          ]
        },
        "prepare": {
          "enum": [
            "husky install src/git-hooks",
            "husky install node_modules/@skylib/config/src/git-hooks"
          ]
        },
        "publish": {
          "enum": [
            "publish-if-not-exists",
            "echo Skip publish"
          ]
        },
        "regenerate-lock-file": {
          "const": "npm install --no-audit --package-lock-only --strict-peer-deps"
        },
        "serve": {
          "enum": [
            "quasar dev",
            "echo Skip serve"
          ]
        },
        "sonar": {
          "enum": [
            "sonar-scanner",
            "echo Skip sonar"
          ]
        },
        "stylelint": {
          "enum": [
            "stylelint --fix --max-warnings 0 src/**/*.{css,scss}",
            "echo Skip stylelint"
          ]
        },
        "stylelint-html": {
          "enum": [
            "stylelint --config .stylelintrc-html.js --fix --max-warnings 0 src/**/*.{html,php,vue}",
            "echo Skip stylelint-html"
          ]
        },
        "stylelint-html-no-fix": {
          "enum": [
            "stylelint --config .stylelintrc-html.js --max-warnings 0 src/**/*.{html,php,vue}",
            "echo Skip stylelint-html-no-fix"
          ]
        },
        "stylelint-no-fix": {
          "enum": [
            "stylelint --max-warnings 0 src/**/*.{css,scss}",
            "echo Skip stylelint-no-fix"
          ]
        },
        "test": {
          "enum": [
            "cf ./lcov-report & jest",
            "echo Skip test"
          ]
        },
        "test-fast": {
          "enum": [
            "cf ./lcov-report & jest --config=jest.config.fast.js",
            "echo Skip test-fast"
          ]
        },
        "tsc": {
          "enum": [
            "tsc --noEmit",
            "echo Skip tsc"
          ]
        },
        "update": {
          "const": "npm update --no-audit --strict-peer-deps"
        },
        "update-package-check": {
          "const": "ncu --dep dev,peer,prod"
        },
        "update-package-force": {
          "const": "ncu --dep dev,peer,prod --upgrade"
        },
        "upgrade": {
          "const": "npm run update-package-force & npm run install-deps"
        },
        "vue-tsc": {
          "enum": [
            "vue-tsc --noEmit",
            "echo Skip vue-tsc"
          ]
        }
      }
    }
  }
}
